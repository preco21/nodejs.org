{
  "name": "nodejs.org",
  "version": "1.0.0",
  "description": "New Nodejs.org website",
  "homepage": "https://nodejs.org",
  "scripts": {
    "build": "node build.js",
    "serve": "node server.js",
    "load-versions": "node scripts/load-versions.js",
    "start": "npm run serve",
    "test": "npm run test:lint && npm run test:unit && npm run test:smoke",
    "test:lint": "standard",
    "test:unit": "tape tests/**/*.test.js | faucet",
    "test:smoke": "tape tests/*.smoketest.js | faucet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodejs/nodejs.org.git"
  },
  "author": "Node.js Website Working Group",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nodejs/nodejs.org/issues"
  },
  "engines": {
    "iojs": ">=2.5.0",
    "node": ">=4.0.0"
  },
  "standard": {
    "ignore": [
      "static/"
    ]
  },
  "dependencies": {
    "autoprefixer-stylus": "0.11.0",
    "changelog-url": "1.0.2",
    "cheerio": "0.22.0",
    "chokidar": "1.6.1",
    "handlebars": "4.0.6",
    "html-to-text": "^2.1.3",
    "js-yaml": "^3.4.5",
    "junk": "2.0.0",
    "map-async": "0.1.1",
    "marked": "0.3.6",
    "metalsmith": "2.3.0",
    "metalsmith-collections": "0.9.0",
    "metalsmith-feed": "0.2.0",
    "metalsmith-layouts": "1.7.0",
    "metalsmith-markdown": "0.2.1",
    "metalsmith-metadata": "0.0.4",
    "metalsmith-permalinks": "0.5.0",
    "metalsmith-prism": "3.0.1",
    "metalsmith-stylus": "2.0.1",
    "metalsmith-yearly-pagination": "2.0.0",
    "ncp": "2.0.0",
    "node-geocoder": "^3.4.1",
    "node-version-data": "1.0.1",
    "octonode": "0.7.6",
    "request": "^2.67.0",
    "require-dir": "0.3.1",
    "semver": "5.3.0",
    "st": "1.2.0",
    "strftime": "0.9.2"
  },
  "devDependencies": {
    "faucet": "^0.0.1",
    "nock": "^9.0.2",
    "pre-commit": "^1.1.2",
    "proxyquire": "^1.7.3",
    "standard": "^8.5.0",
    "tape": "^4.2.2"
  }
}
